<div class="span-9 last">
<form id="group_form_id" action="/user_intakes/index_fast" method="GET">
  <%= '<font color="red">' + flash[:notice] + '</font><br><br>' if flash[:notice] %>
  Select <label for="group_name">Group</label>:
  <%= select_tag 'group_name', options_for_select(  (current_user.is_super_admin? ? [['All Groups','']] : []) + @groups.collect {|e| [e.name, e.name] }, (@group.name unless @group.blank?)), {:onchange => "$('group_form_id').submit();"}%>
</form>
</div>
<div class="span-24 last">
  <% form_tag add_notes_user_intakes_path, :method => :post do %>
  <table class="bluegrey">
    <tr>
      <% if current_user.is_super_admin? %>
      <th class="span-1">Id</th>
      <% end %>
      <th class="span-1">UID</th>
      <th class="span-4"><%= image_tag "profile.png", :alt => "Senior", :title => "Senior" %>&nbsp;Name</th>
      <th>Group</th>      
    </tr>
    <% @user_intakes.each do |user_intake_row| %>     
    <tr>
      <% if current_user.is_super_admin? %>
      <td><%= user_intake_row.id %></td>
      <% end %>        
      <td><%= user_intake_row.senior.id rescue '?' %></td>
      <td><%= link_to (user_intake_row.senior.name), :action => :single_row, :id => user_intake_row.id %></td> 
      <td><%= user_intake_row.group.name rescue '?' %></td>      
    </tr>
    <% end %>  
  </table>
  <% end %>
</div>
<div class="span-12"><%= will_paginate @user_intakes %></div>        