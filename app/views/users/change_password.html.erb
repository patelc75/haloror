<% form_for @user do |f| -%>
  <div class="box span-12">
    <h1>Change Username and Password</h1>
    <p>
      <div class="span-4"><%= f.label :login, "New Username" %></div>
      <%= f.text_field :login %>
    </p>
    <p>
      <div class="span-4"><%= f.label :username_confirmation, "Retype New Username" %></div>
      <%= f.text_field :username_confirmation %>
    </p>

    <hr />

    <p>
      <div class="span-4"><%= f.label :password, "New Password" %></div>
      <%= f.password_field :password %>
    </p>
    <p>
      <div class="span-4"><%= f.label :password_confirmation, "Retype New Password" %></div>
      <%= f.password_field :password_confirmation %>
    </p>
    <hr />
    <p>
      <%= link_to "Config > Users", "#", :class => "button white-button" %>
      <%= f.submit "Update", :disable_with => 'Updating...', :class => "button green-button" %>
    </p>
  </div>
<% end -%>