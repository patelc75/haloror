<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
    <%= javascript_include_tag :defaults %>
    <%= stylesheet_link_tag "layout" %>
	<%= stylesheet_link_tag "login" %>  
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    
    <!-- Icon that goes on the browser tab -->
    <!--link rel="shortcut icon" href="/icon.gif" type="image/gif"-->
    
    <title>Halo Research - Signup</title>
    <meta name="save" content="history">
</head>


<body>

	<div id="header">
		<div class="container">
			<div id="user-info">
				<a href="/login">Sign In</a>
			</div>
			<img src="/images/halo-logo.gif" alt="Halo Research" id="logo" />
			<img src="/images/header-people.gif" alt="People" id="people" />
		</div>
	</div>

    <div class="container">
		<div id="login-col">
			<div id="login-col-header"></div>
			<div class="content">
				<%= error_messages_for :user %>
				<div style="width:200px;margin-left:auto;margin-right:auto">
					<% form_for :user, :url => users_path do |f| -%>
					<label for="login">Login</label>
					<br/>
					<%= f.text_field :login %>
					<br />
					<br />
					<label for="email">Email</label><br/>
					<%= f.text_field :email %>
					<br />
					<br />
					<label for="password">Password</label>
					<br/>
					<%= f.password_field :password %>
					<br />
					<br />
					<label for="password_confirmation">Confirm Password</label>
					<br/>
					<%= f.password_field :password_confirmation %>
					<br />
					<br />
					<div align="center">
						<input name="commit" type="image" src="/images/subscribe.gif" />
					</div>
					<% end -%>
				</div>
			</div>
			<div id="login-col-footer"></div>
		</div>
    </div>
   
    <div id="footer">
		<div class="container">
			<p>
				&copy; Halo Research <span class="divider">|</span> Terms of Service <span class="divider">|</span> Privacy Policy
			</p>
		</div>
	</div>
    
</body>
</html>






