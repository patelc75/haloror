<div><a href="/admin/signup">Sign up users with other roles</a></div>
<br>
<div id="user_signup-col">
	<div id="user_signup-col-header">
		Sign up the Senior
	</div>
  <div class="content">
	
		<div id="errors">
			<% if flash[:warning] %>
			  <span style="font-size: 150%;">
			  The following error occurred:
			  <ul>
			  <li><%= flash[:warning]%></li>
			  </ul>
			<% end %>
			<% if @user.errors %>
			  <%= error_messages_for :user %>
			  <br>
			<% end %>
			<% if @profile.errors %>
			<%= error_messages_for :profile %>
			<% end %>
		</div>

      <% form_tag :action => 'create' do -%>
		<% gs = ['Choose a Group']
		   @groups.each do |g|
			 gs << g.name
		   end %>
	 <div id="device-table" class="table">
	 	<div class="row">
		  <div class="col-250">
	 		  <label for="group">Select Group</label>
			  <br />
		    <%= select_tag 'group', options_for_select(gs.collect { |g| [g, g]}, @group)%>
		    <br />
        <br />
        <br>
		  	<%= render :partial => '/profiles/profile_top' %>
		  </div>
		  
		  <div class="col-250">
		  	<%= render :partial => '/profiles/profile_bottom' %>
			<br />
			<br />
			<input name="commit" type="image" src="/images/subscribe.gif" />
		  </div>
		</div>
	 </div>	
        
      <% end -%>
    </div>
  </div>
	<div style="clear:both"></div>
	<div id="user_signup-col-footer"></div>
</div>