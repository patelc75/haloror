<div class="container">
  <div class="span-24">
      <span class="hint">Filter: Select values from dropdowns given here, to shortlist the rows</span>
    <% form_tag triage_user_path(current_user), :method => :get do %>
      Group: <%= select_tag "search_group", options_from_collection_for_select(@groups, :id, :name, params[:search_group].to_i), {:onchange => "this.form.submit();"} %>
      <span class="prepend-1">
        Last Updated: <%= select_tag "search_day", options_for_select((1..30).collect {|e| [e, e]}.insert(0, ['All',0]), params[:search_day].to_i), {:onchange => "this.form.submit();"} %> day(s), 
        <%= select_tag "search_hour", options_for_select((1..24).collect {|e| [e, e]}.insert(0, ['All',0]), params[:search_hour].to_i), {:onchange => "this.form.submit();"} %> Hour(s), 
        <%= select_tag "search_minute", options_for_select([['All',0], [15,15], [30,30], [45,45]], params[:search_minute].to_i), {:onchange => "this.form.submit();"} %> Minute(s)
      </span>
      <span class="prepend-1">
        Battery Percent: <%= select_tag "search_battery_percent", options_for_select((0..100).step(25).collect {|e| [(e.zero? ? 'All' : e), e]}.insert(1, [10,10]), params[:search_battery_percent].to_i), {:onchange => "this.form.submit();"} %>
        Status: <%= select_tag "search_status", options_for_select([['Pending', 'Pending'], ['Dismissed', 'Dismissed']], params[:search_status]), {:onchange => "this.form.submit();"} %>
      </span>
    <% end -%>
  </div>
  
  <hr class="space" />
  <div class="span-23">
    <div class="dashboard_top">

      <div  class="dashboard_cover">
        <div class="span-24 last">
          <div class="prepend-1 span-11">
            <span class="white_text">Events |</span>
            <span class="black_text">Residents</span>
          </div>
          <div class="span-10 last text-right">
            <%= link_to 'Dismiss All Greens', :controller => 'users', :action => 'dismiss_all_greens', :id => current_user %>
          </div>
        </div>
      </div>
      <div class="clear"></div>
    </div>

    <div class="prepend-top">
      <div class="span-5"><a href="#" class="prepend-1">Name</a> <%= image_tag("up_arr.gif") %></div>
      <div class="prepend-1 span-2"><a href="#" >Alerts</a> <%= image_tag("up_arr.gif") %></div>
      <div class="span-2"><a href="#" >Chart</a><%= image_tag("up_arr.gif") %></div>
      <div class="span-2"><a href="#">Events</a><%= image_tag("up_arr.gif") %></div>
      <div class="span-2 text-center "><a href="#">Battery</a> <%= image_tag("up_arr.gif") %></div>
      <div class="span-3 text-center"><a href="#">Connectivity</a><%= image_tag("up_arr.gif") %></div>
      <div class="span-5"><a href="#" >Last Updated</a> <%= image_tag("up_arr.gif") %></div>
    </div>

    <% @users.each do |user| -%>
    <div class="clear"></div>
    <div class="span-22 ">
      <div class="span-5">
        <%= image_tag("eye.gif", :class => 'h-padding') %>
        <a href="#"><%= user.name %></a>
      </div>
      <div class="span-3">
        <div class="fit_left"><a href="#" class="button_new_dash_2 caution small"><strong>CAUTION</strong></a></div><div class="clear"></div>
        <div class="fit_left">
          <% if user.dismissed_from_triage? -%>
            <%= link_to "Recall", undismiss_triage_path(:user_id => user.id) %>
          <% else -%>
            <%= link_to "Dismiss", dismiss_triage_path(:user_id => user.id) %>
          <% end -%> or <a href="#" >Email</a></div>
      </div>
      <div class="span-2"><%= image_tag("graph.jpg") %></div>
      <div class="span-2"><%= image_tag("list.png") %></div>
      <div class="span-2 text-center">
        <div class="battery-cover" >
          <div class="<%= user.battery_color %> battery-width-<%= user.battery_fill_width %>"><div class="fit_right"><%= image_tag("battery-rt.gif") %></div></div>
        </div>
      </div>
      <div class="span-2 prepend-1 "><%= image_tag("#{user.connectivity_status_icon}") %></div>
      <div class="span-5"><%= user.updated_at.to_s(:time_date) %></div>
    </div>
    <div class="clear"></div>
    <% end -%>
    <div class="span-24 text-center"><%= will_paginate @users %></div>
  </div>

</div>
