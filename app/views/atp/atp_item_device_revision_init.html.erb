<table>
  <tr><th>ATP Item ID</th><th>Device Revisions</th></tr>
  <tr>
    <td><%= @atp_item.id %></td>
    <td><% @atp_item.device_revisions.each do |rev| %>
         <%= rev.revision_model_type %> 
         <br />
    <%  end %>
  </tr>
</table>

<form action="/atp/atp_item_device_revision_save" method="post">
	<%= hidden_field :atp_item, :id %>
	<table> 
	  <tr><th>Device Revision</th></tr>
	  <tr>
	  	<td><%= select(:device_revision, :id, @device_revisions.collect{|d| [d.revision_model_type, d.id]}, :include_blank => true)%></td>
	  </tr> 
	  <tr>
	  	<td colspan="2"><input type="submit" name="Add" value="Add" /></td>
	  </tr>
	</table>
</form>