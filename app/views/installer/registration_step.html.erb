<center>
<div id="installer_div">
 <div id="lightbox-col">
	<img src="/images/lightbox-col-header.gif" /><br />
	<div class="lightbox-content" style="font-size:20px">
		<div style="width:400px;margin-left:auto;margin-right:auto" id="container">
    <%= error_messages_for :user %>
    <%= error_messages_for :gateway %>
    <%= error_messages_for :strap %>
    <div id="errors">
      <% if flash[:warning] %>
			<%= flash[:warning]%>
			<br />
			<br />
			<% end %>
		<% if @remove_link %>
				<%= link_to 'Remove User Mapping', :controller => 'installer', :action => 'remove_user_mapping', 
							:user_id => @user.id, :device_id => @strap.id, :self_test_session_id => @self_test_session.id,
							:gateway_serial_number => @gateway.serial_number, :strap_serial_number => @strap.serial_number %>
				&nbsp; or enter another Strap/Clip Serial Number
			<% end %>
		</div>
    	<div>Registering <%= @user.name %> (<%= @user.id %>)</div>
    	<br />
      <% form_tag :action => 'registration_create_step' do -%>
	  <input type="hidden" name="user_id" value="<%= @user.id %>" />
	  <input type="hidden" name="self_test_session_id" value="<%= @self_test_session.id %>" />
       <label for="serial_number">Gateway Serial Number</label><br/>
        <%= text_field :gateway, :serial_number %>
        <br />
        <br />
        <label for="serial_number">Strap/Clip Serial Number</label><br/>
        <%= text_field :strap, :serial_number %>
        <br />
        <br />
        <%#= @user.devices[0].id%>
		<span style="font-size: 60%;">
        <%if @user.gateway and @user.chest_strap %>
		<a href="/installer/installer/?gateway_id=<%= @user.gateway.id %>&amp;self_test_session_id=<%= @self_test_session.id%>&amp;strap_id=<%= @user.chest_strap.id %>&amp;user_id=<%= @user.id %>">Skip this step (phone install only)</a>
		<%else%>
		Gateway and Strap/Clip Serial Numbers are not registered.
		<%end%>
		</span>
		<br><br>
          <input name="commit" type="image" src="/images/next.gif" />
      <% end %>
          </div>
      	</div>
      	<img src="/images/lightbox-col-footer.gif" />
      </div>
      </div>
      </center>
