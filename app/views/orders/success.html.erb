<h1 id="thank_you_for_placing_the_order_with_us">Thank you for placing the order with us</h1>

<p>
  Your card has been charged <strong><%= number_to_currency(@order.cost, :precision => 2, :unit => '$') %></strong>. 
  Order confirmation has been emailed to <strong><%= @order.bill_email %></strong>
</p>
<p>
  Your order number is <%= @order.full_number %>
</p>
<hr />

<table width="100%">
  <tr>
    <td>Order number: <strong><%= @order.full_number %></strong></td>
    <td>Order date: <%= @order.created_at.to_s(:day_date) %></td>
    <td>Status: In Process</td>
  </tr>
</table>

<br />

<table width="100%">
  <tr>
    <th>Product</th>
    <th>Status</th>
    <th>Quantity</th>
    <th>Item price</th>
    <th>Total price</th>
  </tr>
  <% @order.order_items.each do |item| %>
  <tr>
    <td><%= item.product_model %></td>
    <td>In Process</td>
    <td class="textright"><%= item.quantity %></td>
    <td class="textright"><%= number_to_currency(item.cost, :precision => 2, :unit => '$') %></td>
    <td class="textright"><%= number_to_currency(item.calculated_cost, :precision => 2, :unit => '$') %></td>
  </tr>
  <% end -%>
</table>
<hr />
<table width="100%">
  <tr>
    <td><strong>Billing address</strong></td>
    <td><strong>Your payment</strong></td>
  </tr>
  <tr>
    <td>
      <%= @order.bill_first_name %> <%= @order.bill_last_name %><br />
      <%= @order.bill_address %><br />
      <%= @order.bill_city %><br />
      <%= @order.bill_state %><br />
      <%= @order.bill_zip %><br />
      <%= @order.bill_phone %><br />
      <%= @order.bill_email %><br />
    </td>
    <td>
      Card: *****<%= @order.card_number[-3..-1] %><br />
      Expiry: <%= @order.card_expiry %>
    </td>
  </tr>
</table>