<tr class="<%= cycle('', 'altrow') %>">
  <td><%= image_tag (order.has_failed_transactions? ? 'exclamation.png' : 'tick.png') %> <%= order.id %></td>
  <td><%= UtilityHelper.format_datetime(order.created_at,current_user) %></td>	
  <td><%= order.full_number %></td>
  <td><%= order.masked_card_number %></td>
  <td><b><%= order.bill_first_name %> <%= order.bill_last_name %></b><br>
    <%= order.bill_address%><br>
    <%= order.bill_city%>,<%= order.bill_state %>-<%= order.bill_zip%><br>
    phone: <%= order.bill_phone%><br>
    <%= order.bill_email %>
  </td>
  <td><b><%= order.ship_first_name %> <%= order.ship_last_name %></b><br>
    <%= order.ship_address%><br>
    <%= order.ship_city%>,<%= order.ship_state %>-<%= order.ship_zip%><br>
    phone: <%= order.ship_phone%><br>
    <%#= ship.bill_email %>
  </td>
  <td>
    <% order.order_items.each do |item| %>
    <%= item.product_model %> x <%= item.quantity %> = <%= item.formatted_cost(item.quantity) %><br>
    <% end -%>
  </td>
  <td><%= number_to_currency(order.cost, :precision => 2, :unit => '$') %></td>
  <td><%unless order.comments.nil?%><%= link_to truncate(order.comments, 10, "..."),:controller => 'orders',:action => 'comments',:order_id => order.id  %><%end%></td>
  <td><%= link_to "Payments", :controller => 'payment_gateway_responses', :action => 'index', :order_id => order.id %></td>           
</tr>
