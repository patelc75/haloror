xml.chart do
  xml.live_update( :url=> url_for( :controller => 'chart', :action => 'refresh_data'),
                   :delay => 0 )
  xml.chart_data do
    xml.row do
      xml.null
      @categories.each do |c|
        xml.string( c )
      end
    end
    xml.row do
      xml.string( "Discrete Heartrate" )      
      @series_b.each do |c|
        c.is_a?(String) ? xml.string( c ) : xml.number( c )
      end
    end      
  end
end    