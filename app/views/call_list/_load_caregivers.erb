<% position = 1 %>
<% i = 1 %>

<% 
	caregivers.each do |position, caregiver| 
		user = User.find(caregiver.user_id)
%>
	<%= render :partial => "call_list/item", :locals => { :caregiver => user, :opts => user.roles_users_option, :position => position , :i => i, :role => caregiver } %>

	<% 
		if user.roles_users_option.active
			position = position+1 
		end
	%>
	<% i = i+1 %>
<% end %>