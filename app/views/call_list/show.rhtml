
<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN">
<html>
	<head>
		<%= javascript_include_tag :defaults %>
		
		<%= stylesheet_link_tag "layout" %>
		<%= stylesheet_link_tag "call_list" %>
		<%= javascript_include_tag 'redbox' %>
	</head>
    <body>        
	
		<div id="header">
			<div class="container">
				<div id="user-info">
					Welcome, <span class="user">Emily McGee</span> <span class="divider">|</span> <a href="#" style="margin-right:20px">Account Settings</a> <a href="#" style="font-weight:bold">Logout</a>
				</div>
				<img src="/images/halo-logo.gif" alt="Halo Research" id="logo" />
				<img src="/images/header-people.gif" alt="People" id="people" />
			</div>
		</div>
		
		<div class="container">
			<div id="call_list-col">
				<div id="call_list-col-header">
					Account Settings: <%= @call_list.login %>'s Caregivers
				</div>
				<div class="content">
	        		<div id="call_list">
						<% @call_list.call_orders.each do |call_order| %>
							<div id="item_<%= call_order.id %>">
								<!--span class="column">
									<%= call_order.position %>  
								</span-->
								<span class="column">
									<% @caregiver = call_order.caregiver %>						
									<table>
										<tr>
											<td>
										        <%=link_to_remote("Up",
									            :update => 'call_list',
									            :url => url_for(:controller => 'call_list', :action => 'move_up', :id  => call_order.id)
									            ) %>
												<%=link_to_remote("Down",
									            :update => 'call_list',
									            :url => url_for(:controller => 'call_list', :action => 'move_down', :id  => call_order.id)
									            ) %>
											<td width="100"><%= in_place_editor_field :caregiver, :last_name %> </td>
											<td width="100"><%= in_place_editor_field :caregiver, :first_name %> </td>
											<td width="100"><%= in_place_editor_field :caregiver, :home_phone %> </td>
										</tr>
									</table>	
								</span>
							</div>
						<% end %>
						<br>
					</div>
					<div>
						<span id="add-new-row">
					</div>


					<!--%=link_to_remote("Add new caregiver",
							:update => 'add-new-row',
							:url => url_for(:controller => 'chart', :action => 'heartrate_last_half_hour'),
			              :loading => "Element.show('loading'); ",
			              :complete => "Element.hide('loading')",
			              :before => "toggleVTabs(this.parentNode);") %-->


					<!--%=link_to 'Add contact', {:action => 'text'}, :class => 'lbOn' %-->        

					<%= sortable_element 'call_list',
			        :url => { :action => "sort" , :id => @call_list },
			        :complete => visual_effect(:highlight, 'call_list'),
					 :tag => 'div'
			        %>
				</div>
				<div id="call_list-col-footer"></div>
			</div>
		
	    </div>
	
		<div id="footer">
			<div class="container">
				<p>
					&copy; Halo Research <span class="divider">|</span> Terms of Service <span class="divider">|</span> Privacy Policy
				</p>
			</div>
		</div>
    </body>
</html>