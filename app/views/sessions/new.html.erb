<% if(@show_redbox) %>
<%= launch_remote_redbox(:url =>{ :controller => "sessions", :action => 'failure'}, :html => {:method => :get, :complete => ''}) %>
<% end %>

<div id="secondary-col">
  <div id="secondary-col-header"></div>
  <div class="content">
    <div style="width:200px;margin-left:auto;margin-right:auto">
      <% form_tag sessions_path do -%>
      <label for="login">Username</label><br/>
      <input id="login" name="login" type="text" size="30" />
      <br />
      <br />
      <label for="password">Password</label><br/>
      <input id="password" name="password" type="password" size="30" />
      <br />
      <br />
      <!-- Uncomment this if you want this functionality
      <p><label for="remember_me">Remember me:</label>
      <%= check_box_tag 'remember_me' %></p>
      <br />
      <br />
      -->			
      <div align="center">
        <input name="commit" id="login_button" type="image" src="/images/login.gif" />
      </div>
      <% end %>
    </div>
  </div>
  <div id="secondary-col-footer"></div>
</div>

