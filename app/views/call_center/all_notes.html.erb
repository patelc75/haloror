<div class="table">
	<div class="row header">
<div class="col-100">
	Actions
</div>
<div class="col-100">
	User ID
</div>
<div class="col-100">
	Event ID
</div>
<div class="col-250">
	Created At
</div>
<div class="col-350">
	Note
</div>
</div>
<% if @notes %>
	<% @notes.each do |note| %>
	<div class="row">
		<div class="col-100">
			<%= link_to_remote 'edit', :update => "notes_#{note.id}", :url => {:controller => 'call_center', :action => 'edit_note', :id => note.id }%> 
			&nbsp;|&nbsp; 
			<%= link_to 'delete', :controller => 'call_center', :action => 'delete_note', :id => note.id %>
		</div>
		<div class="col-100">
			<%= note.user_id %>
		</div>
		<div class="col-100">
			<%= note.event_id %>
		</div>
		<div class="col-250">
			<%= note.created_at %>
		</div>
		<div id="notes_column_<%= note.id %>" class="col-350">
			<%= h(note.notes) %>
		</div>
	</div>
	<div id="notes_<%= note.id %>">
	
	</div>
	<% end %>
<% end %>
</div>