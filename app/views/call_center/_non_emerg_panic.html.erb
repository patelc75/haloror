<% unless controller.action_name == 'event_details'%>
  <% if action = event.non_emerg_panic? %>
	<b>Non Emergency Panic</b>
	<%= render :partial => 'undo_action',:locals => {:event => event}%>
  <% else %>
    <%= render :partial => 'mark_event',:locals => {:event => event}%>
  <% end %>
<%else%>
  <% if action = event.non_emerg_panic? %>
    Marked  <b>Non Emergency Panic</b> by <%=action.user.name%> at <%=UtilityHelper.format_datetime(action.created_at, current_user)%>
  <%end%>
<%end%>