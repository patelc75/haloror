<% if action = event.resolved? %>
	Resolved by <%=action.user.name%> at <%=format_datetime(action.created_at, current_user).to_time.strftime("%I:%M%p on %a %m/%d/%Y")%>
<% else %>
	<%=link_to_remote "Resolve", :update => "#{event.id}_resolve", :url => { :action => "resolve", :id => event.id }%>
<% end %>