<% if action = event.false_alarm? %>
	<b>False Alarm</b> by <%=action.user.name%> at <%=UtilityHelper.format_datetime_readable(action.created_at, current_user)%>
<% else %>
	<%=link_to_remote "Mark as Test", :update => "#{event.id}_test_alarm", :url => { :action => "resolve", :id => event.id }%> or 
	<%= link_to_remote "Non emergency Panic", :update => "false_alarm_#{event.id}", :url => {:action => "non_emerg_panic", :id => event.id} %>
<% end %>