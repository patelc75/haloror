<% if action = event.false_alarm? %>
	False Alarm by <%=action.user.name%> at <%=UtilityHelper.format_datetime_readable(action.created_at, current_user)%>
<% else %>
	<%=link_to_remote "Mark as False Alarm", :update => "#{event.id}_false_alarm", :url => { :action => "resolve", :id => event.id }%>
<% end %>