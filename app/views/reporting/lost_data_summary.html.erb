<%=render :partial => 'nav'%>

<div id="date_range" class="date_range">
	<form action="/reporting/lost_data_summary">
	<table>
		<tr><td>All times are in UTC timezone</td></tr>
	  <tr><td>Begin Time</td>&nbsp;&nbsp;<td>End Time</td></tr>
	  <tr><td><%= datetime_select :lost_data, "begin_time"%></td>&nbsp;&nbsp;<td><%= datetime_select :lost_data, "end_time" %></td>&nbsp;&nbsp;<td><%= submit_tag "Submit" %></tr>
	</table>
	</form>
</div>
<% if @users && @users.size > 0 %>
<p>List of Users with lost vitals data from <%= @lost_data.begin_time %> to <%= @lost_data.end_time %></p>
<div id="user-table" class="table">
	<%=render :partial => 'user_table', :locals => {:users => @users, :sortby => 'id', :reverse => false}%>
</div>
<% end %>