<% if toggle %>
	<a name="user_<%=user.id%>"></a>
<% end %>
<div class="row">
	<div class="col-25">
		<% if toggle %>
			<a href="javascript:void(0)" onClick="toggle_user_hidden(<%=user.id%>)" id="user_<%=user.id%>-toggle">[+]</a>
		<% else %>
			&nbsp;
		<% end %>
	</div>
	<div class="col-75">
		<%=user[:id]%>
	</div>
	<div class="col-200">
		
		<% if caregiver %>
			<a href="#user_<%=user.id%>">
		<% else %>
			
		<% end %>
		
		<% if profile = user.profile %>
			<%=profile[:first_name]%> <%=profile[:last_name]%>&nbsp;
		<% else %>	
			&nbsp;
		<% end %>
		
		<% if caregiver %>
			</a>
			(<%=user.profile[:relationship]%>)
		<% end %>
	</div>
	<div class="col-100">
		<%=user[:login]%>&nbsp;
	</div>
	<div class="col-150">
		<%=render :partial => 'reporting/table/user_roles', :locals => {:user => user}%>
	</div>
	<div class="col-150">
		<% if user.access_logs.length > 0 %>
			<a href="/logs/user/<%=user.id%>"><%=user.access_logs.first.created_at.to_formatted_s(:short) %></a>
		<% else %>
			&nbsp;
		<% end %>
		
	</div>
	<div class="col-200">
		<%=link_to_remote_redbox('Profile', :url =>{ :controller => "profiles", :action => "edit_caregiver_profile", :id => user.profile.id, :frame => true }, :html => {:method => :get})%> | <a href="/events/user/<%=user.id%>">Events</a> | <a href="/chart/index/<%=user.id%>">Chart</a>
	</div>
</div>