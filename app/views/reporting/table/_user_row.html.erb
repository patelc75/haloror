<% if toggle %>
	<a name="user_<%=user.id%>"></a>
<% end %>
<div class="row">
	<div class="col-25">
		<% if toggle %>
			<a href="javascript:void(0)" onClick="toggle_user_hidden(<%=user.id%>)" id="user_<%=user.id%>-toggle">[+]</a>
		<% else %>
			&nbsp;
		<% end %>
	</div>
	<div class="col-75">
		<%=user[:id]%>
	</div>
	<div class="col-200">
		
		<% if caregiver %>
			<a href="#user_<%=user.id%>">
		<% end %>
		
		<%=user.profile[:first_name]%> <%=user.profile[:last_name]%>
		
		<% if caregiver %>
			</a>
			(<%=user.profile[:relationship]%>)
		<% end %>
	</div>
	<div class="col-100">
		<%=user[:login]%>
	</div>
	<div class="col-150">
		<%=render :partial => 'reporting/table/user_roles', :locals => {:user => user}%>
	</div>
	<div class="col-150">
		<% if user.access_logs.length > 0 %>
			<a href="/logs/user/<%=user.id%>"><%=user.access_logs.first.created_at.to_formatted_s(:short) %></a>
		<% else %>
			&nbsp;
		<% end %>
		
	</div>
	<div class="col-200">
		<a href="/call_list/show/<%=user.id%>">Profile</a> | <a href="#">Events</a> | <a href="/chart/index/<%=user.id%>">Chart</a>
	</div>
</div>