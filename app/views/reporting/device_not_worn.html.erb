<html>
<body>
<h2>Device Not Worn:</h2>
All times are in UTC timezone
<p>
    &nbsp;
</p>
<p>
	Starting Time: <%= @begin_time %>
	Ending   Time: <%= @end_time %>
</p>
<p>
<table>
	<tr>
		<td>Name</td>
		<td>Not Worn</td>
		<td>Lost Data</td>
		<td>Total Duration</td>
	</tr>
	<tr>
		<td>All</td>
		<td><%= @total_not_worn %> seconds</td>
		<td><%= @total_lost_data %> seconds</td>
		<td><%= @total_lost_data + @total_not_worn %> seconds</td>
	</tr>
<% @users.each do |user| %> 
  <% if user[:total] != 0 %>
	<tr>
		<td><%= user.name %></td>
		<td><%= user[:seconds_not_worn]%> seconds</td>
		<td><%= user[:seconds_lost_data]%> seconds</td>
		<td><%= user[:total]%> seconds</td>
	</tr>
  <% end -%>
<% end -%>
</table>
</body>
</html>