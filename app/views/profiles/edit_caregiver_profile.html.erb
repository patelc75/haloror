<% if params[:frame] %>
	<div id="lightbox-col">
		<img src="/images/lightbox-col-header.gif" /><br />
		<div class="lightbox-content">
			<div style="width:380px;" id="container">
<% end %>

<%= error_messages_for :profile %>

<% remote_form_for(:profile, :update => 'call_list', :url => {:controller => 'profiles', :action => 'update_caregiver_profile', :id => params[:id]}) do |f| %>
	<label for="email">Email</label>
	<br />
	<input type="hidden" name="user_id" value="<%=@user.id%>" />
	<input type="hidden" name="patient_id" value="<%=params[:user_id]%>" />
	
	<%= text_field_tag :email, @user.email %>
	<br />	
	<br />
	<label for="first_name">First Name</label>
	<br />
	<%= f.text_field :first_name %>
	<br />
	<br />
	<label for="last_name">Last Name</label>
	<br />
	<%= f.text_field :last_name %>
	<br />
	<br />
	<label for="address">Address</label>
	<br />
	<%= f.text_field :address %>
	<br />
	<br />
	<label for="city">City/State</label>
	<br />
	<%= f.text_field :city %> <%= f.text_field :state, :size => 15 %>
	<br />
	<br />
	<label for="home_phone">Home Phone</label>
	<br />
	<%= f.text_field :home_phone %>
	<br />
	<br />
	<label for="work_phone">Work Phone</label>
	<br />
	<%= f.text_field :work_phone %>
	<br />
	<br />
	<label for="cell_phone">Cell Phone</label>
	<br />
	<%= f.text_field :cell_phone %>
	<br />
	<br />
	
	<select id="profile_carrier_id" name="profile[carrier_id]">
	<% if @profile.carrier_id == 0 or @profile.carrier_id == nil -%>
    <option value="" selected="selected" >
    Please select the Service Provider </option>
    <% end -%>
    <% @carrier = Carrier.find(:all, :order => "id")
	@carrier.each do |carrier| %>
	<option value="<%= carrier.id %>"
	<% if @profile.carrier_id == carrier.id -%> selected="selected"<% end -%>
	>
	<%= carrier.name %> 
    </option>
    <% end %>
    </select>
	
	<br/>
	<br />
	
	
	<label for="time_zone">Select Time Zone</label>



		<%= time_zone_select ('profile', 'time_zone', TZInfo::Timezone.us_zones, :model => TZInfo::Timezone, :default => "America/Chicago" )%> 
	
	<br/>
	<br />
	
	
    <!--label for="relationship"--> <!--Relationship--> <!--/label-->
	<!--br /-->
	<!--%= f.text_field :relationship %-->
    <!--br/-->
    <br/>
  	<div align="center">
		<input name="commit" type="image" src="/images/update.gif" onClick="RedBox.close()" /> <a href="#"><img src="/images/cancel.gif" onClick="RedBox.close()" /></a>
	</div>
<% end %>

<% if params[:frame] %>

</div>
</div>
<img src="/images/lightbox-col-footer.gif" />
</div>
<% end %>