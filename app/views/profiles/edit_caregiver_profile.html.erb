<% if params[:frame] %>
  <div id="lightbox-col">
    <img src="/images/lightbox-col-header.gif" /><br />
    <div class="lightbox-content">
      <div style="width:380px;" id="container">
      <% end %>
      <%= error_messages_for :profile %>
      <%= error_messages_for :user %>
	  <% if @user == current_user || current_user.is_super_admin? || current_user.is_admin_of_any?(@user.group_memberships) %><center>
	 <%=link_to_remote('Change Password', :update => 'container', :url =>{ :controller => "profiles", :action => "change_password_init", :id => @user.profile.id, :frame => true,:user_id => @user.id }, :html => {:method => :get})%> | <%= link_to "Print Profile Page", :controller => 'users',:action => 'signup_details',:id => @user.id %>
	  <% end %><br><br></center>
	  <% form_remote_tag(:update => 'container', :url => {:controller => 'profiles', :action => 'update_caregiver_profile', :id => params[:id]}, :html => { :id => 'profile_form'}) do %>
        <input type="hidden" name="user_id" value="<%=@user.id%>" />
        <input type="hidden" name="patient_id" value="<%=params[:user_id]%>" />
        <input type="hidden" name="group_id" value="<%=params[:group_id]%>" />
        <input type="hidden" name="roles_user_id" value="<%=params[:roles_user_id]%>" />
		<input type="hidden" name="operator" value="<%=params[:operator]%>"/>
			<% if params[:frame] %>
			<div style="height:600px;overflow:auto;" id="subcontainer">
			<% end %>
        <%= render :partial => 'profile' %>
			<% if params[:frame] %>
			</div>
			<% end %>
        <br/>
        <br/>
        <div align="center">
          <input name="commit" type="image" src="/images/update.gif"  /> <a href="#"><img src="/images/cancel.gif" onClick="RedBox.close();" /></a>
        </div>
      <% end %>
      
      <% if params[:frame] %>
      
      </div>
    </div>
    <img src="/images/lightbox-col-footer.gif" />
  </div>
<% end %>