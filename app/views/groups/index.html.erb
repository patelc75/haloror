<%= render :partial=>'/reporting/nav_config' %>

<div class="span-2"><h3>Groups </h3></div>
<div class="span-10">
<% form_tag "/groups", :method => :get do %>
  <%= text_field_tag "search_string", @search_string, :class => "span-6" %>
  <%= submit_tag "Search", :disable_with => "Please wait...", :class => "button small white-button" %>
  <br />
  <span class="tiny">Search Name, Sales Type or Email</span>
<% end -%>
</div>
<div class="span-9"><%= will_paginate @groups %></div>
<div class="span-3 last">
<%= link_to 'New group', new_group_path, :class => "button green-button medium" %>
</div>
<br>
<table class="bluegrey">
  <tr>
    <th>ID</th>
    <th>Sales Type</th>
    <th>Email</th>    
    <th>Name &amp; Description</th>
    <th>Links</th>
  </tr>
  <%= render :partial => 'group_row', :collection => @groups %>
</table>
<%= will_paginate @groups %>
<br />
