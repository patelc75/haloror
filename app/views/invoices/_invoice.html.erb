  <td><%=h invoice.coupon_code %></td>
  <td><%=h invoice.invoice_num %></td>
  <td><%=h invoice.payment_collector %></td>
  <td><%=h invoice.payment_type %></td>
  <td><%=h invoice.kit_owner %></td>
  <td><%= invoice.kit_leased ? image_tag( 'tick.png') : h( '') %></td>
  <td><%=h invoice.kit_charged_at %></td>
  <td><%=h invoice.kit_charged %></td>
  <td><%=h invoice.deposit_holder %></td>
  <td><%=h invoice.deposit_returned_at %></td>
  <td><%=h invoice.install_fee_amount %></td>
  <td><%=h invoice.install_fee_charged_at %></td>
  <td><%=h invoice.affiliate_fee_amount %></td>
  <td><%=h invoice.affiliate_fee_group_name %></td>
  <td><%=h invoice.affiliate_fee_charged_at %></td>
  <td><%=h invoice.referral_amount %></td>
