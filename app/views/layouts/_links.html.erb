<% caregiver = current_user.is_caregiver? %>
<ul id="my_links">
	<li>
		My&nbsp;Links&nbsp;
		<ul>
			<li><%=link_to_remote_redbox('My&nbsp;Profile', :url =>{ :controller => "profiles", :action => "edit_caregiver_profile", :id => current_user.profile.id, :frame => true,:user_id => current_user.id }, :html => {:method => :get})%></li>

			<% if current_user.is_halouser? %>
				<li><%=link_to('Configure&nbsp;Alerts', :controller => "alerts", :action => "index", :id => current_user.roles_user_by_role_name('halouser').id)%></li>

				<% if !caregiver %>
					<li><%= link_to 'My&nbsp;Caregivers', :controller => 'call_list', :action => 'show', :id => current_user.id %></li>
				<% end %>

				<li><%= link_to 'My&nbsp;Events', :controller => 'events', :action => 'user', :id => current_user.id %></li>
			<% end %>

			<% if caregiver %>
				<li><%= link_to 'Caregivers', :controller => 'call_list', :action => 'show', :id => current_user.id %></li>
			<% end %>
			<% if current_user.is_halouser? || current_user.is_caregiver? %>
			  <li><%= link_to 'Chart', :controller => 'chart', :action => 'flex', :id => current_user.id %></li>
			<% end %>
			<% if current_user.is_admin? || current_user.is_super_admin? %>
				<li><%= link_to 'Management', :controller => 'management', :action => 'index' %></li>
			<% end %>
			<% if current_user.is_admin? || current_user.is_super_admin? || current_user.is_moderator? %>
				<li><%= link_to 'Reporting', :controller => 'reporting', :action => 'index' %></li>
			<% end %>
			<% if current_user.is_admin? || current_user.is_super_admin? || current_user.is_operator? || current_user.is_moderator?%>
				<li><%= link_to 'Operators', :controller => 'call_center', :action => 'show' %></li>
			<% end %>
			<% if current_user.is_admin? || current_user.is_super_admin? || current_user.is_operator? %>
				<li><%= link_to 'Call&nbsp;Center', url_for(:controller => 'call_center', :action => 'index') %></li>
			<% end %>
			<% if current_user.is_admin? || current_user.is_super_admin? || current_user.is_sales? %>
				<li><%= link_to 'User&nbsp;Signup', url_for(:controller => 'users', :action => 'new') %></li>
			<% end %>
			<% if current_user.is_admin? || current_user.is_super_admin? || current_user.is_installer? %>
				<li><%= link_to 'Install&nbsp;Wizard', url_for(:controller => 'installs', :action => 'index') %></li>
			<% end %>
			<% halo_group = Group.find_by_name('halo') %>
			<% if current_user.is_super_admin? || current_user.is_admin_of?(halo_group) %>
			<li><%= link_to 'Info', url_for(:controller => 'util', :action => 'info', :my_links => 'Info') %></li>
			<% end %>		
			<% if current_user.is_super_admin? %>				
				<li><%= link_to 'Home&nbsp;Installs', url_for(:controller => 'util', :action => 'home_install') %></li>
			<% end %>			
		</ul>
	</li>
</ul>