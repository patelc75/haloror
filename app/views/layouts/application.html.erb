<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>

  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag "slider", "halo", 'redbox', 'reporting', 'swfobject', 'jsProgressBarHandler' %>
  <%= yield :js %> <!-- on-demand javascripts. Example: facebox -->

  <%= calendar_date_select_includes 'blue' %>
  <%= stylesheet_link_tag "layout", 'redbox', 'tables', 'screen', 'myscreen', 'custom/buttons', 'application', :media => 'screen' %>
  <%= stylesheet_link_tag 'print',:media => 'print' %>
  <!--[if IE]>
  <%= stylesheet_link_tag 'ie', :media=> 'screen' %>
  <![endif]-->

  <%= yield :css %> <!-- on-demand stylesheets. Example: facebox -->

  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  <%= yield :meta_tags %>

  <!-- Icon that goes on the browser tab -->
  <!--link rel="shortcut icon" href="/icon.gif" type="image/gif"-->

  <title>Halo Monitoring</title>
  <meta name="save" content="history">
  
  <%= yield :head %>

  <% if params[:controller] == 'chart' and params[:action] == 'flex' %>

  <!--  BEGIN Browser History required section -->
  <link rel="stylesheet" type="text/css" href="/flex/history/history.css" />
  <!--  END Browser History required section -->

  <script src="/flex/AC_OETags.js" language="javascript"></script>

  <!--  BEGIN Browser History required section -->
  <script src="/flex/history/history.js" language="javascript"></script>
  <!--  END Browser History required section -->

  <script language="JavaScript" type="text/javascript">
  <!--
  // -----------------------------------------------------------------------------
  // Globals
  // Major version of Flash required
  var requiredMajorVersion = 9;
  // Minor version of Flash required
  var requiredMinorVersion = 0;
  // Minor version of Flash required
  var requiredRevision = 124;
  // -----------------------------------------------------------------------------
  // -->
  </script>
  <% end %>

  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  <%= yield :meta_tags %>

  <!-- Icon that goes on the browser tab -->
  <!--link rel="shortcut icon" href="/icon.gif" type="image/gif"-->

  <title>Halo Monitoring</title>
  <meta name="save" content="history">

  <% if params[:controller] == 'chart' and params[:action] == 'flex' %>

    <!--  BEGIN Browser History required section -->
    <link rel="stylesheet" type="text/css" href="/flex/history/history.css" />
    <!--  END Browser History required section -->

    <title></title>
    <script src="/flex/AC_OETags.js" language="javascript"></script>

    <!--  BEGIN Browser History required section -->
    <script src="/flex/history/history.js" language="javascript"></script>
    <!--  END Browser History required section -->

    <script language="JavaScript" type="text/javascript">
      <!--
      // -----------------------------------------------------------------------------
      // Globals
      // Major version of Flash required
      var requiredMajorVersion = 9;
      // Minor version of Flash required
      var requiredMinorVersion = 0;
      // Minor version of Flash required
      var requiredRevision = 124;
      // -----------------------------------------------------------------------------
      // -->
    </script>
  <% end %>

</head>

<body>

  <div align="center" id="exception_id" style="display:none">
    <div id="lightbox-col">
      <img src="/images/lightbox-col-header.gif" /><br />
      <div class="lightbox-content">
        <div style="width:200px;margin-left:320px" id="container">
        </div>
        <div style="width:200px;margin-left:auto;margin-right:auto" id="container">
          <p><b>No response from server. Please refresh this page to try again.</b></p>
        </div>
      </div>
      <img src="/images/lightbox-col-footer.gif" />
    </div>
  </div>

  <div align="center" id="install_exception_id" style="display:none">
    <div id="lightbox-col">
      <img src="/images/lightbox-col-header.gif" /><br />
      <div class="lightbox-content">
        <div style="width:200px;margin-left:320px" id="container">
        </div>
        <div style="width:200px;margin-left:auto;margin-right:auto" id="container">
          <p><b>No response from server. Please click this <a href="/installs/">link to restart installation.</a></b></p>
        </div>
      </div>
      <img src="/images/lightbox-col-footer.gif" />
    </div>
  </div>
  <% if 'reporting' == controller.controller_name %>
  <div align="center" id="inProgress" style="display:none">
    <img src="/images/processing.gif"/>
  </div>
  <% end %>
  <div id="response"></div>

  <!-- common header shared by error pages -->
  <%= render :partial => "shared/app_header" %>

  <% if 'reporting' == controller.controller_name %>
  <div align="center" id="inProgress" style="display:none">
    <img src="/images/processing.gif"/>
  </div>
  <% end %>
  <div id="response"></div>

  <div class="container">
    <div align="center" id="loading" style="display:none;height:0;width:0;overflow:hidden">
      Loading... This will take a few seconds
    </div>		

      <%= render :partial => 'layouts/flasher' %>
    
    <%= yield %>

    <hr class="space" />
    <div id="footer">
      <p>
        &copy; Halo Monitoring <span class="divider">|</span>
        <%= link_to 'Terms of Service', :controller => 'util', :action => 'terms' %>
        <span class="divider">|</span> 
        <%= link_to 'Privacy Policy', :controller => 'util', :action => 'privacy' %>				
      </p>
    </div>
  </div>

  <% if google_analytics_check() %>
    <script type="text/javascript">
      var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
      document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
    </script>
    <script type="text/javascript">
      var pageTracker = _gat._getTracker("UA-1921582-3");
      pageTracker._initData();
      pageTracker._trackPageview();
    </script>
  <% end %>

</body>
</html>
