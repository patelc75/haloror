<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
    <%= javascript_include_tag :defaults %>
	<%= javascript_include_tag "slider" %>
	<%= javascript_include_tag "halo" %>
	<%= javascript_include_tag 'redbox' %>
	
    <%= stylesheet_link_tag "layout" %> 
	<%= stylesheet_link_tag 'redbox' %>
	
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    
    <!-- Icon that goes on the browser tab -->
    <!--link rel="shortcut icon" href="/icon.gif" type="image/gif"-->
    
    <title>Halo Monitoring</title>
    <meta name="save" content="history">

</head>


<body>
	<div id="response"></div>
	<div id="header">
		<div class="container">
			<div id="user-info">
			<% if logged_in? %>
				Welcome, <%=current_user.profile.first_name%> <!--% if ENV['RAILS_ENV'] == "development"%--> (#<%=current_user.id%>) <!--% end %-->
				<span class="user">

				</span>				
				<span class="divider">|</span> 
				<% if params[:controller] == 'call_list' %>
				<%=link_to_remote_redbox('My Profile', :url =>{ :controller => "profiles", :action => "edit_caregiver_profile", :id => current_user.profile.id, :frame => true }, :html => {:method => :get})%>
				<% else %>				
				<%= link_to 'Account Settings', :controller => 'call_list', :action => 'show', :id => current_user.id %>
				<% end %>
				
				<span class="divider">|</span> 
				<a href="/logout" style="font-weight:bold">Logout</a>
			<% end %>
			</div>
			<img src="/images/halo-logo-2.gif" alt="Halo Research" id="logo-2" />
			<img src="/images/header-people.gif" alt="People" id="people" />
		</div>
	</div>

    <div class="container">
        <div align="center" id="loading" style="display:none;height:0;width:0;overflow:hidden">
			Loading... This will take a few seconds
		</div>
		
        <%= yield %>
    </div>
    
    <div id="footer">
		<div class="container">
			<p>
				&copy; Halo Monitoring <span class="divider">|</span> Terms of Service <span class="divider">|</span> Privacy Policy
			</p>
		</div>
	</div>
    
	<% if request.host == 'myhalomonitor.com' %>
		<script type="text/javascript">
		var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
		document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
		</script>
		<script type="text/javascript">
		var pageTracker = _gat._getTracker("UA-1921582-3");
		pageTracker._initData();
		pageTracker._trackPageview();
		</script>
	<% end %>

</body>
</html>