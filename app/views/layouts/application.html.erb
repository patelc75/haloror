<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
    <%= javascript_include_tag :defaults %>
	<%= javascript_include_tag "slider" %>
	<%= javascript_include_tag "halo" %>
	<%= javascript_include_tag 'redbox' %>
	<%= javascript_include_tag 'reporting' %>
	<%= javascript_include_tag 'swfobject' %>
	
    <%= stylesheet_link_tag "layout" %> 
	<%= stylesheet_link_tag 'redbox' %>
	<%= stylesheet_link_tag 'tables' %>
	
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    
    <!-- Icon that goes on the browser tab -->
    <!--link rel="shortcut icon" href="/icon.gif" type="image/gif"-->
    
    <title>Halo Monitoring</title>
    <meta name="save" content="history">

	<% if params[:controller] == 'chart' and params[:action] == 'flex' %>
	
		<!--  BEGIN Browser History required section -->
		<link rel="stylesheet" type="text/css" href="/flex/history/history.css" />
		<!--  END Browser History required section -->

		<title></title>
		<script src="/flex/AC_OETags.js" language="javascript"></script>

		<!--  BEGIN Browser History required section -->
		<script src="/flex/history/history.js" language="javascript"></script>
		<!--  END Browser History required section -->
		
		<script language="JavaScript" type="text/javascript">
		<!--
		// -----------------------------------------------------------------------------
		// Globals
		// Major version of Flash required
		var requiredMajorVersion = 9;
		// Minor version of Flash required
		var requiredMinorVersion = 0;
		// Minor version of Flash required
		var requiredRevision = 28;
		// -----------------------------------------------------------------------------
		// -->
		</script>
	<% end %>

</head>


<body>
	<div id="response"></div>
	<div id="header">
		<div class="container">
			<div id="user-info">
			<% if logged_in? %>
				Welcome, <%=current_user.profile.first_name%> <!--% if ENV['RAILS_ENV'] == "development"%--> (#<%=current_user.id%>) <!--% end %-->
				<span class="user">

				</span>				
				<span class="divider">|</span> 
				
				<%=link_to_remote_redbox('My Profile', :url =>{ :controller => "profiles", :action => "edit_caregiver_profile", :id => current_user.profile.id, :frame => true,:user_id => current_user.id }, :html => {:method => :get})%>
			<% if current_user.is_halouser?%>
				|
				<%=link_to('My Alerts', :controller => "alerts", :action => "index", :id => current_user.roles_user_by_role_name('halouser').id)%>
				|
				<%= link_to 'My Caregivers', :controller => 'call_list', :action => 'show', :id => current_user.id %>
        |
				<%= link_to 'My Events', :controller => 'events', :action => 'user', :id => current_user.id %>
		  <% end %>
				<% if current_user.is_administrator? %>
					|
					<%= link_to 'Management', :controller => 'management', :action => 'index' %>
					|
					<%= link_to 'Reporting', :controller => 'reporting', :action => 'index' %>
					<span class="divider">|</span>
				<% end %>
				<a href="/logout" style="font-weight:bold">Logout</a>
			<% end %>
			</div>
			<img src="/images/halo-logo-2.gif" alt="Halo Research" id="logo-2" />
			<img src="/images/header-people.gif" alt="People" id="people" />
		</div>
	</div>

    <div class="container">
        <div align="center" id="loading" style="display:none;height:0;width:0;overflow:hidden">
			Loading... This will take a few seconds
		</div>
		
        <%= yield %>
    </div>
    
    <div id="footer">
		<div class="container">
			<p>
				&copy; Halo Monitoring <span class="divider">|</span> Terms of Service <span class="divider">|</span> Privacy Policy
			</p>
		</div>
	</div>
    
	<% if request.host == 'myhalomonitor.com' %>
		<script type="text/javascript">
		var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
		document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
		</script>
		<script type="text/javascript">
		var pageTracker = _gat._getTracker("UA-1921582-3");
		pageTracker._initData();
		pageTracker._trackPageview();
		</script>
	<% end %>

</body>
</html>