
# -*- ruby -*-

#require 'autotest/fsevent' # mac event hook
require 'autotest/growl' # growl notifications
require 'autotest/timestamp' # timestamp when asking user to save file
require 'redgreen/autotest' # colored output
require 'autotest/restart' # restart when .autotest config changes

# require 'autotest/rcov'
# require 'autotest/pretty' # pretty output
# require 'autotest/menu' # ctrl-c will show menu

Autotest.add_hook :initialize do |autotest|
  %w{.git .svn .hg .DS_Store ._* vendor tmp log doc}.each do |exception|
    autotest.add_exception(exception)
  end
end

